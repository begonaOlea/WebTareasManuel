<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>AltaUsuarioServlet</servlet-name>
        <servlet-class>com.wui.AltaUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.wui.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.wui.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SwitchToDoAInProgress</servlet-name>
        <servlet-class>com.wui.SwitchToDoAInProgress</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SwitchToDoADone</servlet-name>
        <servlet-class>com.wui.SwitchToDoADone</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SwitchProgressToDo</servlet-name>
        <servlet-class>com.wui.SwitchProgressToDo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AltaTareaServlet</servlet-name>
        <servlet-class>com.wui.AltaTareaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarTareaServlet</servlet-name>
        <servlet-class>com.wui.ModificarTareaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BajaTareaServlet</servlet-name>
        <servlet-class>com.wui.BajaTareaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SwitchToDoAInProgress</servlet-name>
        <url-pattern>/tarea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SwitchToDoADone</servlet-name>
        <url-pattern>/tarea-mod</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SwitchProgressToDo</servlet-name>
        <url-pattern>/tarea-switch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AltaUsuarioServlet</servlet-name>
        <url-pattern>/alta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AltaTareaServlet</servlet-name>
        <url-pattern>/alta-tarea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarTareaServlet</servlet-name>
        <url-pattern>/modificar-tarea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BajaTareaServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
